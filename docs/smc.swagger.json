    "info": {
      "title": "SMC API",
      "version": "1.0.0",
      "description": "An API for the SMC system",
      "termsOfService": "https://www.disguise.one/en/learn-support/contact-support/",
      "license": {
        "name": "Apache 2.0",
        "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
      }
    },
    "produces": [
      "application/json"
    ],
    "consumes": [
      "application/json"
    ],
    "securityDefinitions": {
      "basicAuth": {
        "type": "basic"
      }
    },
    "tags": [
      {
        "name": "chassis",
        "description": "Interact with the physical disguise server, including the IPMI interface"
      },
      {
        "name": "vfcs",
        "description": "Update and retrieve details about the vfc cards installed in the disguise server"
      },
      {
        "name": "smc",
        "description": "Update and retrieve details about the SMC system installed in the disguise server"
      },
      {
        "name": "localmachine",
        "description": "Update and retrieve details about the status of the d3 host"
      },
      {
        "name": "session",
        "description": "Update and retrieve details about session of the d3 host"
      },
      {
        "name": "networkadapters",
        "description": "Update and retrieve details about the disguise server's network configuration"
      },
      {
        "name": "ledstrip",
        "description": "Interact with the ledstrip at the rear of the disguise server"
      },
      {
        "name": "oled",
        "description": "Interact with the oled at the front of the disguise server"
      }
    ],
    "definitions": {
      "VFC_Slot": {
        "properties": {
          "slot": {
            "type": "integer",
            "example": 1,
            "minimum": 1,
            "maximum": 4
          },
          "type": {
            "type": "string",
            "example": "HDMI",
            "enum": [
              "HDMI",
              "DP",
              "QDVI",
              "QSDI"
            ]
          },
          "status": {
            "type": "string",
            "example": " "
          }
        },
        "type": "object"
      },
      "SMC": {
        "properties": {
          "[Time Elapsed (post-boot)]": {
            "type": "string",
            "example": "ETH_MGMT Enumerated"
          }
        },
        "type": "object"
      },
      "Local_Machine": {
        "properties": {
          "hostname": {
            "type": "string",
            "example": "hostname"
          },
          "serial": {
            "type": "string",
            "example": "44150"
          },
          "type": {
            "type": "string",
            "example": "vx4"
          }
        },
        "type": "object"
      },
      "Session": {
        "properties": {
          "role": {
            "type": "string",
            "example": "understudy"
          }
        },
        "type": "object"
      },
      "Network_Adapter": {
        "properties": {
          "name": {
            "type": "string",
            "example": "d3net"
          },
          "ip": {
            "type": "string",
            "example": "xxx.xxx.xxx.xxx"
          },
          "mac": {
            "type": "string",
            "example": "hh-hh-hh-hh-hh"
          },
          "netmask": {
            "type": "string",
            "example": "xxx.xxx.xxx.xxx"
          }
        },
        "type": "object"
      },
      "Rear_LED_Strip": {
        "properties": {
          "ledMode": {
            "type": "string",
            "example": "static",
            "enum": [
              "static",
              "colour_id",
              "rainbow"
            ]
          },
          "ledR": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255
          },
          "ledG": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255
          },
          "ledB": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255
          }
        },
        "type": "object"
      },
      "OLED_Notification": {
        "properties": {
          "priority": {
            "type": "integer",
            "description": "0 is highest priority and will overwrite a notification being displayed of a lower priority, same priorities will enter a queue",
            "example": 0,
            "minimum": 0,
            "maximum": 2
          },
          "title": {
            "type": "string",
            "example": "Display Error"
          },
          "message": {
            "type": "string",
            "example": "Could not configure output for GUI 0"
          }
        },
        "type": "object"
      },
      "OLED_Notification_Time": {
        "properties": {
          "time": {
            "type": "integer",
            "description": "Default time for how many seconds to display the OLED notification for",
            "example": 10,
            "minimum": 5,
            "maximum": 30
          }
        },
        "type": "object"
      }
    },
    "responses": {
      "ParseError": {
        "description": "When a mask can't be parsed"
      },
      "MaskError": {
        "description": "When any error occurs on mask"
      }
    }
  }
  